
<h3>Add Comment</h3>
<%= form_for ([@photo, @photo.comments.build]) do |f| %>

<p class="username">
  <%= f.label :username %><br>
  <%= f.text_field( :username, {:class => 'form-control'} )%>
</p>
<p>
  <%= f.label :body %>
  <br>
  <%= f.text_area( :body, {:class => 'form-control'})%>
</p>

<p>
  <%= f.submit({:class => 'btn btn-outline-primary'}) %>
</p>
<% end %>
