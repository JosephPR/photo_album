<!DOCTYPE html>
<html>
  <head>
    <title>PhotoAlbum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
  <nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/albums">PhotoAlbum</a>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/photos">All photos</a>
      </li>
      <li class="nav-item active">
        <%= link_to "create album", new_album_path, :class => 'btn', :id => 'create-album' %>

      </li>
      <li class="nav-item active">
        <%= link_to "add photos", new_photo_path, :class => 'btn', :id => 'add-photos' %>
      </li>
      </ul>
  </nav>
</div>
<br>
    <%= yield %>
  </body>
</html>
